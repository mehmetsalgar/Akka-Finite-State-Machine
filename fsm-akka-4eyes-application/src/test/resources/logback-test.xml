<configuration>
    <appender name="STDOUT" target="System.out" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%date{ISO8601}] [%-5level] [%logger{5}] [%thread] [%X{akkaSource}] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>1024</queueSize>
        <neverBlock>true</neverBlock>
        <appender-ref ref="STDOUT" />
    </appender>

    <root level="NFO">
        <appender-ref ref="ASYNC"/>
    </root>

    <logger name="org.aspectj" level="INFO" />
    <logger name="org.springframework" level="INFO" />
    <logger name="com.datastax" level="INFO" />
    <logger name="kafka" level="WARN" />
    <logger name="org.apache.kafka" level="WARN" />
    <logger name="org.apache.zookeeper" level="WARN" />
    <logger name="org.salgar.fsm.akka.foureyes" level="INFO" />
    <logger name="scala" level="WARN" />
    <logger name="akka" level="INFO" />
    <logger name="akka.projection" level="WARN" />
    <logger name="akka.projection.elasticsearch.internal" level="WARN" />
    <logger name="org.apache.http" level="INFO" />
    <logger name="org.elasticsearch" level="ERROR" />
</configuration>